<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
<div class="container my-5">
	<h1 class="text-center display-4 text-warning">GoldenCutter</h1>
	<p class="text-center text-light mb-5">Enter your original URL to shorten it</p>
	<div class="row justify-content-center">
		<div class="col-md-6 d-flex align-items-center">
			<form method="post" style="width: 600px">
				<div class="form-group mx-auto my-3">
					<input type="url" class="form-control bg-transparent text-warning border-warning" id="originalURL" placeholder="Enter Your Original URL" style="text-align: center">
				</div>
				<div class="form-group mx-auto my-3">
					<input type="url" class="form-control bg-transparent text-warning border-warning" id="shortURL" style="text-align: center" readonly>
				</div>
				<div class="d-flex justify-content-center mt-2">
					<button id="submitBtn" class="btn btn-warning mx-1">
						Short URL <i class="fa-solid fa-scissors"></i>
					</button>
					<button id="copyBtn" class="btn btn-warning mx-1">
						Copy URL <i class="fas fa-copy"></i>
					</button>
					<button id="cleanBTN" class="btn btn-warning mx-1">
						New Search <i class="fa-solid fa-broom"></i>
					</button>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	<script src="~/js/ApiConnection.js" asp-append-version="true" type="module"></script>
}
